include common.inc

env OPTIMIZE -Os

# bootloader takes first sector
FLASH_RESERVE_START_KB 128

# use last 2 pages for flash storage
# H743 has 16 pages of 128k each
define HAL_STORAGE_SIZE 32768
STORAGE_FLASH_PAGE 14


# ChibiOS system timer
STM32_ST_USE_TIMER 12
define CH_CFG_ST_RESOLUTION 16

# SPI1 for IMU1 (ICM42688)
PA5 SPI1_SCK SPI1
PA6 SPI1_MISO SPI1
PD7 SPI1_MOSI SPI1
PC4 IMU1_CS CS

# todo: QSPI1 for "blackbox" flash

# two I2C buses
I2C_ORDER I2C2 I2C1

# I2C1
PB8 I2C1_SCL I2C1 PULLUP
PB9 I2C1_SDA I2C1 PULLUP

# I2C2
PB10 I2C2_SCL I2C2 PULLUP
PB11 I2C2_SDA I2C2 PULLUP

# ADC
PA4 BATT_VOLTAGE_SENS ADC1 SCALE(1)
PA0 BATT_CURRENT_SENS ADC1 SCALE(1)

define HAL_BATT_MONITOR_DEFAULT 4
define HAL_BATT_VOLT_PIN 10 # todo?
define HAL_BATT_CURR_PIN 11 # todo?
define HAL_BATT_VOLT_SCALE 11.0
define HAL_BATT_CURR_SCALE 40.0

# order of UARTs (and USB)
SERIAL_ORDER OTG1 UART7 USART1 USART2 USART3 UART4 UART7 UART8

# USART1
PB6 USART1_TX USART1
PB7 USART1_RX USART1

# USART2 (MSP Displayport OSD)
PA2 USART2_TX USART2
PA3 USART2_RX USART2

# USART3
PD8 USART3_TX USART3
PD9 USART3_RX USART3

# UART4
PC10 UART4_TX UART4
PC11 UART4_RX UART4

# UART7 (ELRS receiver)
PB4 UART7_TX UART7
PB3 UART7_RX UART7

PE1 UART8_TX UART8
PE0 UART8_RX UART8

# CAN bus
PD0 CAN1_RX CAN1
PD1 CAN1_TX CAN1

# Motors. # todo: COnfigure bidir (append BIDIR at the end)
PC6  TIM3_CH1 TIM3  PWM(1)  GPIO(50)
PC7  TIM3_CH2 TIM3  PWM(2)  GPIO(51)
PC8  TIM3_CH3  TIM3  PWM(3)  GPIO(52)
PC9  TIM3_CH4  TIM3  PWM(4)  GPIO(53)
PE5  TIM15_CH1  TIM15  PWM(5)  GPIO(54)
PE6  TIM15_CH2  TIM15  PWM(6)  GPIO(55)
PE13 TIM1_CH3 TIM1 PWM(7) GPIO(56)
PE14 TIM1_CH4 TIM1 PWM(8) GPIO(57)

# Beeper
# PE9 TIM1_CH1 TIM1 GPIO(58) ALARM

DMA_PRIORITY S*

DMA_NOSHARE SPI1*

# SPI devices
SPIDEV icm42688  SPI1 DEVID1 IMU1_CS      MODE3  2*MHZ 16*MHZ   # Clock is 100Mhz so highest clock <= 24Mhz is 100Mhz/8

# IMU
IMU Invensensev3 SPI:icm42688 ROTATION_YAW_180
# todo: 1 or 3?
define HAL_DEFAULT_INS_FAST_SAMPLE 1

# DPS310 integrated on I2C2 bus, multiple possible choices for external barometer
# todo: Put this back once the IMU works.
BARO DPS310 I2C:0:0x77

# setup for OSD
define OSD_ENABLED 1
define HAL_OSD_TYPE_DEFAULT 1

# You can remove this line once QSPI is set up; required to prevent a logging error
# when no SD card or external flash is present.
define AP_SCRIPTING_ENABLED 0